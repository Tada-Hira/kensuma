<%= stylesheet_link_tag "users", :media => "all" %>
<%= csrf_meta_tags %>

<aside class="main-sidebar sidebar-dark-primary elevation-4">
  <!-- Brand Logo -->
  <%= link_to users_orders_path, class:"brand-link", style: "display: flex" do %>
    <table>
      <tr>
        <td><%= image_tag "kensuma/03", class:"brand-image elevation-3", style: "opacity: .8" %>
          <div class="logo-item-side">
            <span>&reg;</span>
          </div>
        </td>
      </tr>
    </table>
    <%# <span class="brand-text font-weight-light">建スマ</span> %>
  <% end %>

	<!-- Sidebar -->
  <div class="sidebar">
    <!-- Sidebar business panel (optional) -->
    <div class="business-panel mt-3 d-flex">
      <p>会社名：<%= current_business_name %></p>
    </div>

    <!-- Sidebar Menu -->
    <nav class="mt-2">
      <ul class="nav nav-pills nav-sidebar flex-column" data-widget="treeview" role="menu" data-accordion="false">
        <% @documents.each do |document| %>
          <%= link_to (controller.controller_path == 'users/documents' ? users_request_order_document_path(params[:request_order_uuid], document, format: :pdf) : users_request_order_sub_request_order_document_path(params[:request_order_uuid], params[:sub_request_order_uuid], document)), class:"nav-link" do %>
            <li class="nav-item">
              <i class="nav-icon fas fa-file"></i>
              <p><%= document.document_type_i18n %></p>
            </li>
          <% end %>
        <% end %>
      </ul>
    </nav>
    <!-- /.sidebar-menu -->
  </div>
  <!-- /.sidebar -->
</aside>
