<% provide(:title, "現場情報詳細(元請)") %>

<div class="card">
  <div class="card-body table-responsive p-0">
    <table class="table table-hover text-nowrap">
      <tbody>
        <tr>
          <td>
            <%= link_to "現場情報一覧", users_orders_path, class: "btn btn-md btn-default" %>
            <%= link_to "現場情報修正", edit_users_order_path(@order), class: "btn btn-md btn-md btn-success" %>
          </td>
          <td>
            <%= render '/users/documents/shares/show_order_link', order: @order %>
          </td>
        </tr>

        <tr>
          <th style='font-size:22px'><%= Order.human_attribute_name(:order) %></th> <!--現場-->
          <td></td>
        </tr>
        <tr>
          <th>&emsp;&emsp;<%= Order.human_attribute_name(:site_career_up_id) %></th> <!-- 現場ID(キャリアアップシステム) -->
          <td><%= @order.site_career_up_id %></td>
        </tr>
        <tr>
          <th>&emsp;&emsp;<%= Order.human_attribute_name(:site_name) %></th> <!-- 現場名 -->
          <td><%= @order.site_name %></td>
        </tr>
        <tr>
          <th>&emsp;&emsp;<%= Order.human_attribute_name(:site_address) %></th> <!-- 施工場所住所 -->
          <td><%= @order.site_address %></td>
        </tr>
        <tr>
          <th style='font-size:22px'><%= Order.human_attribute_name(:orderer) %></th> <!--発注者-->
          <td></td>
        </tr>
        <tr>
          <th><%= Order.human_attribute_name(:orderer) %></th> <!--発注者-->
          <td></td>
        </tr>
        <tr>
          <th>&emsp;&emsp;<%= Order.human_attribute_name(:order_name) %></th> <!-- 発注者(氏名) -->
          <td><%= @order.order_name %></td>
        </tr>
        <tr>
          <th>&emsp;&emsp;<%= Order.human_attribute_name(:order_post_code) %></th> <!-- 発注者(郵便番号) -->
          <td><%= @order.order_post_code %></td>
        </tr>
        <tr>
          <th>&emsp;&emsp;<%= Order.human_attribute_name(:order_address) %></th> <!-- 発注者(住所) -->
          <td><%= @order.order_address %></td>
        </tr>
        <tr>
          <th><%= Order.human_attribute_name(:supervisor) %></th> <!--監督員-->
          <td></td>
        </tr>
        <tr>
          <th>&emsp;&emsp;<%= Order.human_attribute_name(:order_supervisor_name) %></th> <!-- 監督員(氏名) -->
          <td><%= @order.order_supervisor_name %></td>
        </tr>
        <tr>
          <th>&emsp;&emsp;<%= Order.human_attribute_name(:order_supervisor_company) %></th> <!-- 監督員(所属会社名) -->
          <td><%= @order.order_supervisor_company %></td>
        </tr>
        <tr>
          <th>&emsp;&emsp;<%= Order.human_attribute_name(:order_supervisor_apply) %></th> <!-- 監督員(権限及び意見の申出方法) -->
          <td><%= @order.order_supervisor_apply %></td>
        </tr>
        <tr>
          <th style='font-size:22px'><%= Order.human_attribute_name(:prime_contractor) %></th> <!--元請会社-->
          <td></td>
        </tr>
        <tr>
          <th><%= Order.human_attribute_name(:order_infomation) %></th> <!--現場情報-->
          <td></td>
        </tr>
        <tr>
          <th>&emsp;&emsp;<%= Order.human_attribute_name(:construction_name) %></th> <!-- 工事名 -->
          <td><%= @order.construction_name %></td>
        </tr>
        <tr>
          <th>&emsp;&emsp;<%= Order.human_attribute_name(:construction_details) %></th> <!-- 工事内容 -->
          <td><%= @order.construction_details %></td>
        </tr>
        <tr>
          <th>&emsp;&emsp;<%= Order.human_attribute_name(:start_date) %></th> <!-- 工期(自) -->
          <td><%= l(@order.start_date, format: :ja_kan) %></td>
        </tr>
        <tr>
          <th>&emsp;&emsp;<%= Order.human_attribute_name(:end_date) %></th> <!-- 工期(至) -->
          <td><%= l(@order.end_date, format: :ja_kan) %></td>
        </tr>
        <tr>
          <th>&emsp;&emsp;<%= Order.human_attribute_name(:contract_date) %></th> <!-- 契約日 -->
          <td><%= l(@order.contract_date, format: :ja_kan) %></td>
        </tr>
        <tr>
          <th><%= Order.human_attribute_name(:site_agent) %></th> <!--現場代理人-->
          <td></td>
        </tr>
        <tr>
          <th>&emsp;&emsp;<%= Order.human_attribute_name(:site_agent_name) %></th> <!-- 現場代理人(氏名) -->
          <td><%= @order.site_agent_name %></td>
        </tr>
        <tr>
          <th>&emsp;&emsp;<%= Order.human_attribute_name(:site_agent_apply) %></th> <!-- 現場代理人(権限及び意見の申出方法) -->
          <td><%= @order.site_agent_apply %></td>
        </tr>
        <tr>
          <th><%= Order.human_attribute_name(:supervisor) %></th> <!--監督員-->
          <td></td>
        </tr>
        <tr>
          <th>&emsp;&emsp;<%= Order.human_attribute_name(:supervisor_name) %></th> <!-- 監督員(氏名) -->
          <td><%= @order.supervisor_name %></td>
        </tr>
        <tr>
          <th>&emsp;&emsp;<%= Order.human_attribute_name(:supervisor_apply) %></th> <!-- 監督員(権限及び意見の申出方法) -->
          <td><%= @order.supervisor_apply %></td>
        </tr>
        <tr>
          <th><%= Order.human_attribute_name(:professional_engineer) %></th> <!--専門技術者-->
          <td></td>
        </tr>
        <tr>
          <th>&emsp;&emsp;<%= Order.human_attribute_name(:professional_engineer_name_1st) %></th> <!-- 専門技術者1(氏名) -->
          <td><%= @order.professional_engineer_name_1st %></td>
        </tr>
        <tr>
          <th>&emsp;&emsp;<%= Order.human_attribute_name(:professional_engineer_qualification_1st) %></th> <!-- 専門技術者1(資格内容) -->
          <td><%= @order.professional_engineer_qualification_1st %></td>
        </tr>
        <tr>
          <th>&emsp;&emsp;<%= Order.human_attribute_name(:professional_engineer_construction_details_1st) %></th> <!-- 専門技術者1(担当工事内容) -->
          <td><%= @order.professional_engineer_construction_details_1st %></td>
        </tr>
        <tr>
          <th><%= Order.human_attribute_name(:professional_engineer) %></th> <!--専門技術者-->
          <td></td>
        </tr>
        <tr>
          <th>&emsp;&emsp;<%= Order.human_attribute_name(:professional_engineer_name_2nd) %></th> <!-- 専門技術者2(氏名) -->
          <td><%= @order.professional_engineer_name_2nd %></td>
        </tr>
        <tr>
          <th>&emsp;&emsp;<%= Order.human_attribute_name(:professional_engineer_qualification_2nd) %></th> <!-- 専門技術者2(資格内容) -->
          <td><%= @order.professional_engineer_qualification_2nd %></td>
        </tr>
        <tr>
          <th>&emsp;&emsp;<%= Order.human_attribute_name(:professional_engineer_construction_details_2nd) %></th> <!-- 専門技術者2(担当工事内容) -->
          <td><%= @order.professional_engineer_construction_details_2nd %></td>
        </tr>
        <tr>
          <th><%= Order.human_attribute_name(:supervising_engineer) %></th> <!--監督技術者・主任技術者-->
          <td></td>
        </tr>
        <tr>
          <th>&emsp;&emsp;<%= Order.human_attribute_name(:supervising_engineer_name) %></th> <!-- 監督技術者･主任技術者(氏名) -->
          <td><%= @order.supervising_engineer_name %></td>
        </tr>
        <tr>
          <th>&emsp;&emsp;<%= Order.human_attribute_name(:supervising_engineer_check) %></th> <!-- 監督技術者･主任技術者(専任・非専任) -->
          <td><%= order_lead_engineer_check_yes(@order.supervising_engineer_check_i18n) %>&emsp;・&emsp;
          <%= order_lead_engineer_check_no(@order.supervising_engineer_check_i18n) %></td>
        </tr>
        <tr>
          <th>&emsp;&emsp;<%= Order.human_attribute_name(:supervising_engineer_qualification) %></th> <!-- 監督技術者･主任技術者(資格内容) -->
          <td><%= SkillTraining.find(@order.supervising_engineer_qualification).name if @order.supervising_engineer_qualification.present? %></td>
        </tr>
        <tr>
          <th><%= Order.human_attribute_name(:supervising_engineer_assistant) %></th> <!--監督技術者補佐-->
          <td></td>
        </tr>
        <tr>
          <th>&emsp;&emsp;<%= Order.human_attribute_name(:supervising_engineer_assistant_name) %></th> <!-- 監督技術者補佐(氏名) -->
          <td><%= @order.supervising_engineer_assistant_name %></td>
        </tr>
        <tr>
          <th>&emsp;&emsp;<%= Order.human_attribute_name(:supervising_engineer_assistant_qualification) %></th> <!-- 監督技術者補佐(資格内容) -->
          <td><%= SkillTraining.find(@order.supervising_engineer_assistant_qualification).name if @order.supervising_engineer_assistant_qualification.present? %></td>
        </tr>
        <tr>
          <th><%= Order.human_attribute_name(:submission_destination) %></th> <!-- 提出先及び担当者名 -->
          <td><%= @order.submission_destination %></td>
        </tr>
        <tr>
          <th><%= Order.human_attribute_name(:construction_license_status) %></th> <!-- 工場に必要な建設許可証 -->
          <td></td>
        </tr>
      </tbody>
    </table>
  </div>
  <div class="card-footer">
    <%= link_to "削除", users_order_path(@order), method: :delete, data: { confirm: "#{@order.site_uu_id}を削除します。本当によろしいですか？" }, class: "btn btn-md btn-danger btn-block" %>
  </div>
</div>
