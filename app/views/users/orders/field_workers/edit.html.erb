<% provide(:title, "入場作業員編集") %>
<% provide(:btn_text, "更新") %>

<div class="card">
  <%= form_with model: @field_worker, url: users_order_field_worker_path, method: :patch, local: true do |f| %>
    <div class="card-body">
      <% @field_workers.each do |field_worker| %>
        <%= fields_for "field_workers[]", field_worker do | f | %>
          <%= f.date_field :admission_date_start, class: "form-control" %>
          <%= f.date_field :admission_date_end, class: "form-control" %>
        <% end %>
      <% end %>
    </div>
    <div class="card-footer">
      <%= f.submit yield(:btn_text), class: "btn btn-md btn-block btn-success" %>
      <%= link_to "詳細画面へ", users_order_field_worker_path, class: "btn btn-md btn-block btn-default" %>
      <%= link_to "一覧画面へ", users_order_field_workers_path, class: "btn btn-md btn-block btn-default" %>
    </div>
  <% end %>
</div>
