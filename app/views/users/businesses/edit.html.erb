<% provide(:title, "会社情報編集") %>
<% provide(:btn_text, "更新") %>

<div class="card">
  <%= form_with model: @business, url: users_business_path, method: :patch, local: true, class: "business-form-validation" do |f| %>
    <div class="card-body">
      <%= render partial: "form", locals: { f: f, business: @business } %>
    </div>
    <div class="card-footer">
      <%= f.submit yield(:btn_text), class: "btn btn-md btn-block btn-success" %>
      <%= link_to "戻る", users_business_path, class: "btn btn-md btn-block btn-default" %>
    </div>
  <% end %>
</div>
