    <div class="radio-item">
      <%= b.label { b.radio_button + b.text } %>
    </div>
  <% end %>
</div>

<div class="input-group w-50">
  <%= f.number_field :objective_insurance, class: "form-control", id: "objective-insurance-input", min: 1 %>
