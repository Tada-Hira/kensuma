<% provide(:title, "入場作業員登録") %>
<% provide(:btn_text, "登録") %>

<div class="card">
  <div class="card-body">
    <%= form_with model: @field_worker, url: users_request_order_field_workers_path, method: :post, local: true do |f| %>
      <%= render partial: "form", locals: { f: f, field_worker: @field_worker } %>
      
      <%= f.submit yield(:btn_text), class: "btn btn-md btn-block btn-primary" %>
      <%= link_to "一覧画面へ", users_request_order_field_workers_path, class: "btn btn-md btn-block btn-default" %>
    <% end %>
  </div>
</div>
