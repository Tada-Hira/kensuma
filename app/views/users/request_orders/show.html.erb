<% provide(:title, "発注依頼詳細") %>

<% if @request_order.submitted? %>
  <button class="btn btn-outline-primary"disabled>申請済</button> 
<% elsif @sub_request_orders.blank? %>
  <%= link_to "申請する", users_request_order_submit_path(@request_order), method: :post, data: { confirm: "下請けへ未依頼ですが、申請して宜しいでしょうか？" }, class: "btn btn-outline-primary" %>
<% else %>
  <%= link_to "申請する", users_request_order_submit_path(@request_order), method: :post, class: "btn btn-outline-primary" %>
<% end %>

<div class="card">
  <div class="card-body table-responsive p-0">
    <table class="table table-hover text-nowrap">
      <tbody>
        <tr>
          <th><%= RequestOrder.human_attribute_name(:status) %></th>
          <td><%= @request_order.status_i18n %></td>
        </tr>
        <tr>
          <th><%= Business.human_attribute_name(:name) %></th>
          <td><%= @request_order.business.name %></td>
        </tr>
      </tbody>
    </table>
  </div>
</div>

<div class="content-header">
  <div class="container-fluid">
    <div class="row mb-2">
      <div class="col-sm-6">
        <h1 class="m-0"><%= '下請け依頼一覧' %></h1>
      </div>
      <div class="col-sm-6">
      </div>
    </div>
  </div>
</div>
<div class="card">
  <div class="card-body table-responsive p-0">
    <% @sub_request_orders.each do |sub_request_order| %>
      <table class="table table-hover text-nowrap">
        <tbody>
          <tr>
            <th><%= RequestOrder.human_attribute_name(:status) %></th>
            <td><%= sub_request_order.status_i18n %></td>
          </tr>
          <tr>
            <th><%= Business.human_attribute_name(:name) %></th>
            <td><%= sub_request_order.business.name %></td>
          </tr>
        </tbody>
      </table>
    <% end %>
  </div>
    <div class="card-footer">
    <%= link_to "下請けに書類作成を依頼する", new_users_request_order_sub_request_order_path(@request_order), class: "btn btn-md btn-block btn-outline-primary" %>
    <%= link_to "一覧画面へ", users_request_orders_path, class: "btn btn-md btn-block btn-default" %>
    <%= link_to "書類一覧画面へ", users_request_order_documents_path(@request_order), class: "btn btn-md btn-block btn-default" unless @request_order.parent_id.present? %>
  </div>
</div>
